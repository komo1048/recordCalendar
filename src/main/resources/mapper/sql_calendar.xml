<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.record.calendar.calendarDao.CalendarDao">
	<insert id="insertTodayWork">
		insert into calendar (title, content, start) value (#{title}, #{content}, #{start})
	</insert>
	
	<select id="getAllPlanList" resultType="com.record.calendar.calendarDto.CalendarDto" parameterType="hashMap" >
		select * from calendar
	</select>
	
	<select id="getSelectPlan" resultType="com.record.calendar.calendarDto.CalendarDto">
		select * from calendar where start = #{start}
	</select>
	
	<delete id="deletePlan">
		delete from calendar where start = #{start}
	</delete>
	
	<update id="updateTodayWork">
		update calendar set title = #{title}, content = #{content} where start = #{start}
	</update>
</mapper>    